<div class="page-header">
  <%= link_to new_order_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Order
  <% end %>
  <h1>Listing orders</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Order no</th>
            <th>Tracking no</th>
            <th>Is express delivery</th>
            <th>Is customer pickup</th>
            <th>Dilivery date</th>
            <th>Order currency</th>
            <th>Special instruction</th>
            <th>Order value</th>
            <th>User</th>
            <th>Address</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @orders) do |order| %>
            <td><%= order.order_no %></td>
            <td><%= order.tracking_no %></td>
            <td><%= order.is_express_delivery %></td>
            <td><%= order.is_customer_pickup %></td>
            <td><%= order.dilivery_date %></td>
            <td><%= order.order_currency %></td>
            <td><%= order.special_instruction %></td>
            <td><%= order.order_value %></td>
            <td><%= order.user_id %></td>
            <td><%= order.address_id %></td>
            <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
