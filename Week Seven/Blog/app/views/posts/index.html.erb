
<h1>List of All posts</h1>
<%= link_to 'New posts' , new_post_path %>
<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th>Category</th>
    <th colspan="4"></th>
  </tr>
 
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.content %></td>
       <td><%= post.categry.name %></td>

       <% if post.user_id == current_user.id %>

            <td><%= link_to 'show', post_path(post) %></td>
           <td><%= link_to 'Edit', edit_post_path(post) %></td>
           <td><%= link_to 'Destroy', post_path(post),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tr>
  <% end %>
</table>
<h1> Click to see Category wise post <h1>
      <%= link_to 'click ', categries_path(@categry) %>

