<h1>Edit animal</h1>
 
<%= form_with(model: @animal) do |form| %>
 
  <% if @animal.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@animal.errors.count, "error") %> prohibited
        this animal from being saved:
      </h2>
      <ul>
        <% @animal.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>
 
  <p>
    <%= form.label :category %><br>
    
    <%= form.select :category, ['mammals','birds','fishes','reptiles','mphibians','invertebrates']%>
  </p>

  <p>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </p>
 
  <p>
    <%= form.submit %>
  </p>
 
<% end %>
 
