<h1>New Animal</h1>

<%= form_with scope: :animal, url: animals_path ,local: true do |form| %>
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>
 
  <p>
    <%= form.label :category %><br>
    
    <%= form.select :category, ['mammals','birds','fishes','reptiles','mphibians','invertebrates']%>
  </p>

  <p>
  	<%= form.label :description %><br>
  	<%= form.text_area :description %>
 
  <p>
    <%= form.submit %>
  </p>
<% end %>

<%= link_to 'Back', animals_path %>