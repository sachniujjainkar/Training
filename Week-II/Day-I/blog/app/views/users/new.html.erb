<h1>Signup!</h1>

<%= form_for @user, url: '/users' do |f| %>
<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@user.errors.count, "error") %> prohibited
      this article from being saved:
    </h2>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<table>

  <tr>
    <td>Name:</td>
    <td> <%= f.text_field :name %></td>
  </tr>
  <tr>
  <td>Email:</td> <td><%= f.text_field :email %></td>
  </tr>
  <tr>
  <td>Password:</td><td> <%= f.password_field :password %></td>
</tr>
<tr>
  <td>Password Confirmation:</td><td> <%= f.password_field :password_confirmation %></td>
</tr>
<tr>
  <td colspan="2" aline="right"><%= f.submit "Submit" %></td>
</tr>
</table>
<% end %>
