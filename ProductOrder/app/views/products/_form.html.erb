
<%= form_for(product) do |f| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :sku %>
    <%= f.text_field :sku %>
  </div>

  <div class="field">
    <%= f.label :quantity %>
    <%= f.number_field :quantity %>
  </div>

  <div class="field">
    <%= f.label :length %>
    <%= f.number_field :length,class: :text_field, step: :any %>
  </div>

  <div class="field">
    <%= f.label :width %>
    <%= f.number_field :width, class: :text_field,step: :any %>
  </div>

  <div class="field">
    <%= f.label :height %>
    <%= f.number_field :height,class: :text_field, step: :any %>
  </div>

  <div class="field">
    <%= f.label :weight %>
    <%= f.number_field :weight,class: :text_field, step: :any %>
  </div>

  <div class="field">
    <%= f.label :price %>
    <%= f.number_field :price, class: :text_field,step: :any %>
  </div>

  <div class="field">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
