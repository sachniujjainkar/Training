<h1>Welcome to Articles</h1>

<% if flash[:success] %>
  <div class='alert alert-success'><%= flash[:success] %></div>
<% end %>

<%= link_to 'Click here to log out.', logout_path %>

<%= link_to 'New Article' , new_article_path %><br><br>

<table>
	<tr>
		<th>Title</th>
		<th>Text</th>
		<th colspan="2"></th>
	</tr>

	<% @articles.each do |article| %>
		<tr>
			<td><%= article.title %></td>
			<td><%= article.text %></td>
			<td><%= link_to 'Show', article_path(article)%></td>
			<td><%= link_to 'Edit', edit_article_path(article) %>
			</td>
			<td><td><%= link_to 'Destroy', article_path(article),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td></td>
		</tr>
	<% end %>
</table>