<%= form_for(@user) do |form| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<table  width="50%" height="250px" align="center">
  <tr>
     <td> <%= form.label :first_name %></td>
    <td><%= form.text_field :first_name, id: :user_first_name %></td>
  </tr>

  <tr>
    <td><%= form.label :last_name %></td>
    <td><%= form.text_field :last_name, id: :user_last_name %></td>
  </tr>

  <tr>
    <td><%= form.label :dob %></td>
    <td><%= form.date_select :dob, id: :user_dob,:start_year => Date.current.
    year, :end_year => 1990,:required => true %></td>
  </tr>

  <tr>
    <td> <font color="red">*</font><%= form.label :email %></td>
    <td><%= form.text_field :email, id: :user_email %></td>
  </tr>
  </table>

      <%= form.fields_for(:addresses) do |builder| %>
      <%= render 'address_fields', :f => builder %>
      <% end %>

    <div align="center">
   <font color="red">*</font><%= link_to_add_fields "Add Address", form, :addresses %>
  </div>


  <%= form.submit %>


<% end %>
