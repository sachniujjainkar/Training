<%= link_to 'New posts' , new_post_path , class: "btn btn-success"%>


<h1>List of All posts</h1>
<!--Table-->
<table class="table", border-collapse: separate>

    <!--Table head-->
    <thead class="blue-grey lighten-4">
        <tr>
            <th>Title</th>
            <th>Content</th>
            <th>Category </th>
        </tr>
    </thead>
    <tbody>
       <% @posts.each do |post| %> 
            <tr>
              <td><%= post.title %></td>
              <td><%= post.content %></td>
              <td><%= post.categry.name %></td> 
                   <td><%= link_to 'show', post_path(post),class: "btn btn-info" %></td>   
                   <% if post.user_id == current_user.id %>
                   <td><%= link_to 'Edit', edit_post_path(post),class: "btn btn-info" %></td>
                   <td><%= link_to 'Destroy', post_path(post),class: "btn btn-info",
                    method: :delete,
                    data: { confirm: 'Are you sure?'} %></td>
              <% end %>
           </tr>
        <% end %>
    </tbody>
    </table>
<text align = "center", color = "red" , size ="12pt" style ="italic"> Click  below button to see Category wise post <text><br>
  <%= link_to 'click ', categries_path(@categry), class: "btn btn-primary btn-lg" %>
 





