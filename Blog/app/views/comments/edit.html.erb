<h1>Edit Comment</h1>
<%= form_for([@post,@comment]) do |f| %>
<p>
  <%= f.label :comment %>
  <%= f.text_area :body %>
</p>
<p>
  <% @tags = Tag.all %>
	      <% @tags.each do |tag| %>
	        <input type="checkbox" value=<%= tag.id %> name="comment[tag_ids][]" />
	        <label for="tag_list"><%= tag.name %></label>
	      <% end %>
</p>
<p>
  <%= f.submit %>
<% end %>
