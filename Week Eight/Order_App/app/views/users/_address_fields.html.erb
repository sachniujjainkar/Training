<fieldset>
<div class="field">
    <%= f.label :address_body %>
    <%= f.text_area :address_body, id: :address_address_body %>
  </div>

  <div class="field">
    <%= f.label :city %>
    <%= f.text_field :city, id: :address_city %>
  </div>

  <div class="field">
    <%= f.label :state %>
    <%= f.text_field :state, id: :address_state %>
  </div>

  <div class="field">
    <%= f.label :postal_code %>
    <%= f.text_field :postal_code, id: :address_postal_code %>
  </div>
<div class="field">
    <%= f.hidden_field :_destroy %>
    <%= link_to "remove", '#', class: "remove_fields" %>
  </div>
  </fieldset>