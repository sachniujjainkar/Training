<p id="notice"><%= notice %></p>

<h1 align="center">List of all Users</h1>

<table width="70%" height ="300%" cellspacing="10%" cellpadding="10%">
  <thead>
    <tr>
      <th height="70%">First name</th>
      <th>Last name</th>
      <th>Dob</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.dob %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', user ,class: "btn btn-info"%></td>
        <td><%= link_to 'Edit', edit_user_path(user),class: "btn btn-info" %></td>
        <td><%= link_to 'Destroy', user,class: "btn btn-info", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


