<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<p>
  <strong>Category:</strong>
  <%= @post.category.name %>
</p>

<p><strong>Tags:</strong>
 <% @post.tags.each do |t| %>
 	<%= link_to t.name, tag_path(t.name), title: 'Animal Tag', 'data-toggle' => 'tooltip', 'data-placement' => 'right' %> 
 <% end %>
</p>

<h2>Comments</h2>
<%= render @post.comments %>



<h2>Add a comment:</h2>
<%= render 'comments/form' %>

<% if @post.user_id == current_user.id %>
<%= link_to 'Edit', edit_post_path(@post) %> |
<% end %>

<%= link_to 'Back', posts_path %>
