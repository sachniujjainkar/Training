<div class="fields">
<h3>Address</h3>
	
		<p>
			<%= f.label :line_1 %>
			<%= f.text_area :line_1 %>
		
			<%= f.label :line_2 %>
			<%= f.text_area :line_2 %>
		</p>

		<p>
			<%= f.label :street %>
			<%= f.text_field :street %><br /><br />
		
			

