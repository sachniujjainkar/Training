<div class="page-header">
  <%= link_to new_address_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Address
  <% end %>
  <h1>Listing addresses</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Line 1</th>
            <th>Line 2</th>
            <th>Street</th>
            <th>City</th>
            <th>State</th>
            <th>Country</th>
            <th>Postal_code</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @addresses) do |address| %>
            <td><%= address.line_1 %></td>
            <td><%= address.line_2 %></td>
            <td><%= address.street %></td>
            <td><%= address.city %></td>
            <td><%= address.state %></td>
            <td><%= address.country %></td>
            <td><%= address.postal_code %></td>
            <td><%= address.order_id %></td>
            <td><%= link_to 'Show', lineitem %></td>
        <td><%= link_to 'Edit', edit_address_path(address) %></td>
        <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to  new_address_path , :class => 'btn btn-md btn-default',:title => 'Add New Line Item', :rel => 'tooltip' do %>
    <span class="glyphicon glyphicon-pencil"></span> New Address 
    <% end %>
