<p id="notice"><%= notice %></p>

<h1 align ="center">List of all Orders</h1>
<%= link_to 'New Order', new_order_path ,class: "btn btn-info" %>
<table  class="table table-striped">
  <thead>
    <tr class="success">
      <th>Order no</th>
      <th>Is express delivery</th>
      <th>Is customer pickup boolean</th>
      <th>Delivery date</th>
      <!-- <th>Order currency</th> -->
      <th>Order value</th>
      <th>Tracking no</th>
      <th>Special instruction</th>
      <th>User</th>
      <th>Address</th>
       <th>City</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.order_no %></td>
        <td><%= order.is_express_delivery %></td>
        <td><%= order.is_customer_pickup_boolean %></td>
        <td><%= order.delivery_date %></td>
        <!-- <td><%= order.order_currency %></td> -->
        <td><%= order.order_value %></td>
        <td><%= order.tracking_no %></td>
        <td><%= order.special_instruction %></td>
        <td><%= order.user.first_name %></td>
        <td><%= order.address.address_body %></td>
        <td><%= order.address.city %></td>
        <td><%= link_to 'Show', order, class: "btn btn-info" ,class:"glyphicon glyphicon-search"%></td>

        <td><%= link_to 'Destroy', order,class: "btn btn-info", method: :delete, class: "glyphicon glyphicon-remove",data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
